---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SEO from "../components/SEO.astro";

const { title, description, url } = Astro.props;

const makeTitle = title ? title + " | " + "Shivam Fabricon" : "Shivam Fabricon";

const seoData = {
  title: makeTitle,
  description:
    description ?? "Expert fabrication services for your business needs.",
  url: "https://shivamfabricon.com" + url,
  keywords: "fabrication, metalwork, custom solutions",
};
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <SEO {...seoData} />
    <link rel="icon" type="image/svg+xml" href="/logo.png" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{makeTitle}</title>
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-J7T603R3JJ"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-J7T603R3JJ');
    </script>
  </head>
  <body class="font-inter">
    <Header />
    <slot />
    <Footer />
  </body><script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Shivam Fabricon",
      "url": "https://shivamfabricon.com",
      "logo": "https://shivamfabricon.com/logo.jpg",
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+91 97125 49222",
        "contactType": "Customer Service",
        "areaServed": "IN",
        "availableLanguage": ["English", "Hindi"]
      },
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "11, Om Shayona Aracde, Sarkhej - Gandhinagar Hwy, Nr. Silver Oak University",
        "addressLocality": "Ahmedabad",
        "addressRegion": "Gujarat",
        "addressCountry": "India"
      },
      "openingHours": "Mon-Sat 09:00-20:00",
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.8",
        "reviewCount": "300"
      },
      "description": "Expert fabrication services for your business needs. Engineering, Procurement, and Construction solutions for sustainable industries.",
      "foundingDate": "2012",
      "founders": [
        {
          "@type": "Person",
          "name": "Ishwar Patel"
        }
      ],
      "makesOffer": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Innovative Solutions",
            "description": "Stainless steel-based products, including grills, gates, railings, and hotel equipment."
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Mounting & Installation Services",
            "description": "Expert fitting and finishing for flawless implementation."
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Creative Design Works",
            "description": "Machine-cut stainless steel features for modern interior and exterior aesthetics."
          }
        }
      ],
      "department": {
        "@type": "Organization",
        "name": "Shivam Fabricon",
        "numberOfEmployees": "10+",
        "award": "3000+ Designs and 1200+ Completed Projects"
      },
      "hasPart": [
        {
          "@type": "WebPage",
          "name": "Industries",
          "url": "https://shivamfabricon.com/industries"
        },
        {
          "@type": "WebPage",
          "name": "Projects",
          "url": "https://shivamfabricon.com/projects"
        },
        {
          "@type": "WebPage",
          "name": "Services",
          "url": "https://shivamfabricon.com/services"
        },
        {
          "@type": "WebPage",
          "name": "About Us",
          "url": "https://shivamfabricon.com/about-us"
        },
        {
          "@type": "WebPage",
          "name": "Contact Us",
          "url": "https://shivamfabricon.com/#contact-us"
        }
      ]
    }
  </script>
</html>

<style>
  @import url("https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap");

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

