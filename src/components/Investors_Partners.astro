---
import { fetchClientData } from '../utils/sanityData';

const clients = await fetchClientData();
//console.log(clients);
---

<section class="py-12 bg-white">
  <div class="container mx-auto px-6 sm:px-6 lg:px-14">
   
    <div class="flex flex-col lg:flex-row justify-between items-center lg:items-center mb-8">
      <h2 class="lg:w-64 text-4xl lg:text-5xl text-center lg:text-left font-bold text-gray-900 lg:mb-0 mb-4">
        Investors & Partners
      </h2>
      <p class="text-gray-600 text-center font-semibold lg:text-left lg:max-w-lg">
        We believe that collaboration is key to building a sustainable future. Our investors and partners play a crucial role in driving our mission.
      </p>
    </div>

  
    <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
      {clients.map((client, index) => (
        <div
          class="flex items-center justify-center p-2 border bg-gray-50 rounded-lg shadow-md hover:shadow-lg transition-shadow"
        >
          <img
            src={client.logo}
            alt={client.name}
            class="h-12 w-auto object-contain"
          />
        </div>
      ))}
    
  </div>
  </div>
</section>
