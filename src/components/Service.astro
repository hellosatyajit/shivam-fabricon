---
import { fetchServices } from "../utils/sanityData";

const services = await fetchServices();

const serviceDetails = services.map((service) => ({
  title: service.title,
  description: service.description,
  image: service.images[0]?.src || "",
  alt: service.images[0]?.alt || "Default alt text",
  slug: service.slug,
}));

const {
  heading = "Providing Best Services",
  subheading = "We are dedicated to providing the best services in the sustainability manufacturing industry. Our commitment to excellence is reflected in our innovative practices, cutting-edge technology, and a passionate team of experts.",
} = Astro.props;
---

<section class="py-12 bg-white">
  <div class="container mx-auto px-6 sm:px-6 lg:px-14">
    <div
      class="flex flex-col lg:flex-row lg:items-center justify-between mb-10"
    >
      <div class="lg:w-[28%] text-center lg:text-left">
        <h2
          class="text-4xl lg:text-5xl lg:leading-tight font-bold text-gray-900"
        >
          {heading}
        </h2>
      </div>
      <div
        class="lg:max-w-lg  text-center lg:text-justify mt-6 lg:mt-0"
      >
        <p class="text-gray-600 font-medium">{subheading}</p>
      </div>
    </div>

    <div class="py-2">
      {
        serviceDetails.slice(0, 3).map((service,index) => (
          <div class={`flex flex-col lg:flex-row items-center lg:items-center  gap-6 justify-between bg-white border-y  ${
        index === 0 ? 'border-t-0' : ''
      } ${index === 2 ? 'border-b-0' : ''} py-6 lg:py-10 `}>
            <img
              src={service.image}
              alt={service.alt}
              class="w-4/5 lg:w-[30%] lg:h-40 rounded-2xl object-cover"
            />

            <div class="lg:w-3/5 flex flex-col lg:flex-row justify-between gap-4">
              <div class="lg:w-2/5 flex justify-center lg:justify-start items-center text-center lg:text-left">
                <h3 class="text-3xl lg:leading-tight lg:text-4xl font-semibold">
                  {service.title}
                </h3>
              </div>

              <div class="lg:w-1/2 flex justify-center lg:justify-start items-center text-center lg:text-justify">
                <p class="text-gray-600 text-sm mt-2">{service.description}</p>
              </div>
            </div>

            <div class="flex items-center justify-center w-10 h-10 bg-blue-100 rounded-full border group">
  <a href={`/services/${service.slug}`} class="group-active:rotate-[-45deg]">
    <span>
      <img
        src="/arrowblack.svg"
        width="20"
        height="20"
        class="transition-transform duration-500 ease-in-out transform group-active:rotate-[-45deg] mb-1 mr-1"
      />
    </span>
  </a>
</div>

          </div>
        ))
      }

      <div class="text-center mt-8">
        <a class=" flex justify-center " href="/servicesPage">
          <button
            class="flex items-center justify-center font-medium bg-[#072F6A] text-white px-6 py-2 rounded-lg hover:bg-blue-600 space-x-2"
          >
            <span>Learn More</span>
            <img src="/arrow.svg" alt="arrow" class="w-4 h-4" />
          </button>
        </a>
      </div>
    </div>
  </div>
</section>
