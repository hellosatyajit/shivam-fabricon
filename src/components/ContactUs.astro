<section class="py-12 max-w-2xl mx-auto  px-6 bg-[#A7C5FB] rounded-3xl my-16  shadow-lg">
  <h1 class="text-3xl font-semibold text-center text-black mb-8">Contact Us</h1>

  <form action="#" method="POST" class="p-7 bg-[#A7C5FB]/80 rounded-lg space-y-5 ">
    
    <!-- Name Field -->
    <div>
      <label for="name" class="block text-lg font-medium pl-2">Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full p-3 rounded-lg mt-2 border border-gray-300 placeholder-gray-700 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        placeholder="Your Name"
      />
    </div>

    <!-- Email Field -->
    <div>
      <label for="email" class="block text-lg font-medium pl-2">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full p-3 rounded-lg mt-2 border border-gray-300 placeholder-gray-700 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        placeholder="Your Email"
      />
    </div>

    <!-- Phone Number Field -->
    <div>
      <label for="phone" class="block text-lg font-medium pl-2">Phone Number:</label>
      <input
        type="tel"
        id="phone"
        name="phone"
        required
        class="w-full p-3 rounded-lg mt-2 border border-gray-300 placeholder-gray-700 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        placeholder="Your Phone Number"
      />
    </div>

    <!-- Message Field -->
    <div>
      <label for="message" class="block text-lg font-medium pl-2">Message:</label>
      <textarea
        id="message"
        name="message"
        rows="4"
        required
        class="w-full p-3 rounded-lg mt-2 border border-gray-300 placeholder-gray-700 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        placeholder="Your Message..."
      ></textarea>
    </div>

    <!-- Send Button -->
    <div>
      <button
        type="submit"
        class="w-full px-4 py-3 text-base bg-gradient-to-r from-blue-600 to-blue-800 text-white rounded-lg shadow-md hover:opacity-90 transition-all"
      >
        Let's Chat
      </button>
    </div>

  </form>
</section>